<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Новая новость"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/archivenewslistitemTitle"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Здесь текст новости..."
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/archivenewslistitemText"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Добавил юзер 16.12.2022"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/archivenewslistitemCreator"/>

</LinearLayout>

