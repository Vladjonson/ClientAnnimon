<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Title"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/usefulcodeslistitemTitle"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="18.09.2020 / 15:52"
			android:gravity="right"
			android:id="@+id/usefulcodeslistitemTime"/>

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Text ..."
		android:id="@+id/usefulcodeslistitemText"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<ImageView
			android:src="@android:drawable/ic_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="center"
			android:id="@+id/usefulcodeslistitemRating"/>

		<ImageView
			android:src="@android:drawable/ic_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="center"
			android:id="@+id/usefulcodeslistitemViews"/>

		<ImageView
			android:src="@android:drawable/ic_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="User"
			android:id="@+id/usefulcodeslistitemUser"/>

		<ImageView
			android:src="@android:drawable/ic_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:gravity="center"
			android:id="@+id/usefulcodeslistitemComents"/>

	</LinearLayout>

</LinearLayout>

